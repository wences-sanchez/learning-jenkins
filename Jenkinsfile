pipeline {
    agent any

    stages {
        stage('Mañana') {
            steps {
                echo 'Suena el despertador'
                echo 'Me despierto temprano'
                echo 'Me levanto de la cama'
                echo 'Desayuno con café'
            }
        }
        stage('Mediodía') {
            steps {
                echo 'Almuerzo para reponer fuerzas'
                echo 'Me tomo mi café del mediodía'
            }
        }
        stage('Tarde') {
            steps {
                echo 'Termino mi jornada laboral'
                echo 'Me marcho a mi casa'
            }
        }
        stage('Noche') {
            steps {
                echo 'Me ducho'
                echo 'Me voy a la cama'
                echo 'Me duermo'
            }
        }
    }
}
